{
  "manifest_version": 2,
  "name": "Spider Read",
  "version": "0.0.3",
  "description": "Simplify reading with spider",
  "homepage_url": "https://github.com/offeringofpie/spider-ext",
  "icons": {
    "48": "icons/web.svg",
    "96": "icons/web.svg"
  },

  "permissions": ["contextMenus", "tabs"],

  "page_action": {
    "default_icon": "icons/web.svg",
    "default_title": "Spider Read"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
